<% if fly_site.latest_flyability_score %>
  <div id=<%= "collapse_group_#{fly_site.slug}" %>>
    <% collapse_score_dow_nums = [] %>
    <% fly_site.latest_flyability_score.scores.map{|k,_| k.to_i}.sort.each do |score_dow_num| %>
      <% dow = get_dow(score_dow_num) %>
      <% link_class = "dow-forecast text-light #{get_score_css_class(fly_site.latest_flyability_score.scores[score_dow_num.to_s])}" %>
      <button class="<%= link_class %>" id=<%= "#{fly_site.slug}_#{dow}"%> type="button" data-toggle="collapse" data-target=<%= "#collapse_#{fly_site.slug}_#{dow}" %>  aria-expanded="false" aria-controls=<%= "collapse_#{fly_site.slug}_#{dow}" %>>
        <%= dow %>
      </button>
      <% collapse_score_dow_nums << score_dow_num %>
    <% end %>
    <%= render partial: "shared/expanded_score_forecast", locals: { fly_site: fly_site, collapse_score_dow_nums: collapse_score_dow_nums } %>
  </div>
<% end %> 